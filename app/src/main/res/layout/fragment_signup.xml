<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signUpFragment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 및 비밀번호"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/signUpFragment_name_input_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_layout"
        android:hint="    성명"
        android:textSize="17sp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpFragment_tv"/>

    <EditText
        android:id="@+id/signUpFragment_password_input_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_layout"
        android:hint="    비밀번호"
        android:textSize="17sp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpFragment_name_input_et"/>

    <TextView
        android:id="@+id/signUpFragment_signUp_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="계속 진행하여 회원가입하기"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue_select"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="22dp"
        app:layout_constraintTop_toBottomOf="@id/signUpFragment_password_input_et"/>


</androidx.constraintlayout.widget.ConstraintLayout>