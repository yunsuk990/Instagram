<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">

    <LinearLayout
        android:id="@+id/search_searchBar_ll"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_recyclerView_rl"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/rounded_layout"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="7dp">

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/search_pressed"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="검색"
                android:inputType="text"
                android:textSize="20sp"
                android:background="@null"
                android:layout_gravity="center_vertical" />


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/search_recyclerView_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/search_searchBar_ll">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@color/white"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>