<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile.UpdateProfileFragment">

    <TextView
        android:id="@+id/update_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:src="@drawable/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view"/>

    <View
        android:id="@+id/view"
        android:background="@color/gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/update_profile_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/update_profile_cv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <ImageView
            android:id="@+id/update_profile_iv"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view1"
        android:background="@color/gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/update_profile_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/update_profile_name_tv"
        android:text="이름"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/update_profile_name_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/update_profile_name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/update_profile_name_tv"
        app:layout_constraintStart_toEndOf="@+id/update_profile_name_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/update_profile_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="사용자\n이름"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/update_profile_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/update_profile_name_tv" />

    <EditText
        android:id="@+id/update_profile_nickname_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/update_profile_nickname_tv"
        app:layout_constraintEnd_toEndOf="@+id/update_profile_name_et"
        app:layout_constraintStart_toStartOf="@+id/update_profile_name_et"
        app:layout_constraintTop_toTopOf="@+id/update_profile_nickname_tv" />

    <TextView
        android:id="@+id/update_profile_introduce_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="소개"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/update_profile_nickname_tv"
        app:layout_constraintTop_toBottomOf="@+id/update_profile_nickname_tv" />

    <EditText
        android:id="@+id/update_profile_introduce_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/update_profile_introduce_tv"
        app:layout_constraintEnd_toEndOf="@+id/update_profile_nickname_et"
        app:layout_constraintStart_toStartOf="@+id/update_profile_nickname_et"
        app:layout_constraintTop_toTopOf="@+id/update_profile_introduce_tv" />


    <TextView
        android:id="@+id/update_profile_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/update_profile_introduce_tv"
        app:layout_constraintTop_toBottomOf="@+id/update_profile_introduce_tv" />


    <EditText
        android:id="@+id/update_profile_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/update_profile_email_tv"
        app:layout_constraintEnd_toEndOf="@+id/update_profile_introduce_et"
        app:layout_constraintStart_toStartOf="@+id/update_profile_introduce_et"
        app:layout_constraintTop_toTopOf="@+id/update_profile_email_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_profile_bt"
        android:text="수정하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>